<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ./partials/head %>
    </head>
    <body>
        <header>
            <% include ./partials/header %>
        </header>
        <main class="container-fluid">
            <div class="row mt-2">
                <% include ./partials/navbar %>
                <div class="col-sm-10">
                    <table class="table table-hover">
                        <thead>
                            <th scope="col">Part Number</th>
                            <th scope="col">Name/Description</th>
                            <th scope="col">Revision</th>
                            <th scope="col">Unit of Measure</th>
                            <th scope="col">Available QTY</th>
                        </thead>
                        <tbody>
                            <% part_list.forEach(part => { %>
                                <tr>
                                    <td><%= part.number %></td>
                                    <td><%= part.name %></td>
                                    <td><%= part.revision %></td>
                                    <td><%= part.unitOfMeasure %></td>
                                    <td>0</td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <a class="btn btn-secondary btn-block btn-lg" href="/inventory/part/create" role="button">Add New Part</a>
                </div>
            </div>
        </main>
        <footer>
            <% include ./partials/footer %>
        </footer>
    </body>
</html>